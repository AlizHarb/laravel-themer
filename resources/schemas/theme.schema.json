{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Laravel Themer Configuration",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "name": {
            "type": "string",
            "description": "The display name of the theme."
        },
        "slug": {
            "type": "string",
            "description": "URL-safe identifier for the theme (lowercase, hyphens, no spaces).",
            "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
        },
        "asset_path": {
            "type": "string",
            "description": "Public path where assets are published (e.g. themes/my-theme)."
        },
        "parent": {
            "type": ["string", "null"],
            "description": "The slug or name of the parent theme to inherit from."
        },
        "description": {
            "type": "string",
            "description": "A description of the theme."
        },
        "author": {
            "type": "string",
            "description": "Author of the theme."
        },
        "version": {
            "type": "string",
            "description": "Semantic version of the theme."
        },
        "authors": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": { "type": "string" },
                    "email": { "type": "string", "format": "email" },
                    "role": { "type": "string" }
                },
                "required": ["name"]
            },
            "description": "The authors of the theme."
        },
        "extra": {
            "type": "object",
            "description": "Any additional custom configuration."
        },
        "removable": {
            "type": "boolean",
            "description": "Whether the theme can be completely deleted from the system."
        },
        "disableable": {
            "type": "boolean",
            "description": "Whether the theme can be disabled via the manager."
        },
        "screenshots": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Paths to screenshots of the theme."
        },
        "tags": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Tags for categorizing the theme."
        }
    },
    "required": ["name", "slug", "asset_path"]
}
